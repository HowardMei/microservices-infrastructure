#!/bin/bash

PYTHONPATH=/usr/local/lib
LD_LIBRARY_PATH=/usr/local/lib

/sbin/ldconfig

/usr/local/bin/zk-latencies.py --servers {{ ansible_hostname }}:2181 --znode_count=100 --znode_size=100 --synchronous --force 2>$1 1 > /dev/null

if [[ $? -eq 0 ]]; then

	echo "Test successfully completed"
    exit 0
else 
	echo "Test has failed"
	exit 2
fi


## Remove reports generated by python script
rm -rf /usr/local/bin/*.txt